@model IEnumerable<Assignment.DB.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div>
    <button class="btn btn-info" style="margin-bottom: 10px"> @Html.ActionLink("Create New", "Create")</button>
</div>
<div>
    <button class="btn btn-info" style="margin-bottom: 10px"> @Html.ActionLink("Export To Excel", "ExportToExcel")</button>
</div>
<table id="students" class="table">
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(model => model.StID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.ClassName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassName)
            </td>
            <td>
                <button type="button" data-student-id="@item.StID" class="btn btn-danger js-delete">Delete</button>
            </td>
        </tr>
            }
        </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#students").DataTable({
                "bLengthChange": false,
                "bFilter": true,
                "bInfo": false,
                "bAutoWidth": false
            });
            $("#students .js-delete").on("click", function (e) {
                e.preventDefault();
                var button = $(this);
                if (confirm("Are you sure want to delete this Student")) {
                    $.ajax({
                        url: "/api/Students/" + button.attr("data-student-id"),
                        method: "DELETE",
                        success: function () {
                            window.location.href = '@Url.Action("Index", "Students")';
                        }
                    })
                }
            })
        });
    </script>
}