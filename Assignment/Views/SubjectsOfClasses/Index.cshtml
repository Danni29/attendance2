@model IEnumerable<Assignment.DB.SubjectsOfClass>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <button class="btn btn-info" style="margin-bottom: 10px">     @Html.ActionLink("Create New", "Create")</button>

</p>
<div>
    <button class="btn btn-info" style="margin-bottom: 10px"> @Html.ActionLink("Export To Excel", "ExportToExcel")</button>
</div>
<div>
    <button class="btn btn-info" style="margin-bottom: 10px"> @Html.ActionLink("Import From Excel", "ImportExcel")</button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlotTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lecturer.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.SubName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SlotTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lecturer.Fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.SubName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubOfClaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SubOfClaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubOfClaID })
        </td>
    </tr>
}

</table>
